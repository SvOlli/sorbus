{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "request": "launch",
            "showDevDebugOutput": "raw",
            "type": "cortex-debug",
            "servertype": "openocd",
            // This may need to be "arm-none-eabi-gdb" for some previous builds
            "gdbPath": "gdb-multiarch",
            "device": "RP2040",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "configFiles": [
                // Using a Raspberry Pi
                //"interface/raspberrypi-swd.cfg",
                // Using a debug probe or additional Pico
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            //"svdFile": "/workspaces/sorbus/src/build/_deps/pico_sdk-src/src/rp2040/hardware_regs/RP2040.svd", 
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/RP2040.svd",
            "runToEntryPoint": "main",
            // Work around for stopping at main on restart
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        },
        {
            "name": "Debug tools/disass.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/disass.exe", // Replace with your compiled utility path
            "args": [
                // Add any command-line arguments your utility requires
                "-f", "${workspaceFolder}/bin/cpm/9/nolimit.sx4",
                "-a", "0x400",
                "-c", "65816"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Change to true if you want a separate terminal
            "MIMode": "gdb", // Use "lldb" if you're on macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build", // Optional: define a task to build your utility before debugging
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path to your GDB location
            "miDebuggerArgs": ""
        },
        {
            "name": "Debug tools/historian.exe",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tools/historian.exe", // Replace with your compiled utility path
            "args": [
                // Add any command-line arguments your utility requires
                "-f", "${workspaceFolder}/../backtrace_65c02.log",
                "-c", "65c02",
                "-p"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true, // Change to true if you want a separate terminal
            "MIMode": "gdb", // Use "lldb" if you're on macOS
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "build", // Optional: define a task to build your utility before debugging
            "miDebuggerPath": "/usr/bin/gdb", // Adjust this path to your GDB location
            "miDebuggerArgs": ""
        }
    ]
}
